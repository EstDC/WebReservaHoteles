---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/layout/Header.jsx';
import PasswordRecoveryForm from '../../components/auth/PasswordRecoveryForm.jsx';
---

<Layout title="Recuperar Contraseña - HotelFinder">
  <Header client:load />
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto">
      <h1 class="text-3xl font-bold mb-8 text-center">Recuperar Contraseña</h1>
      <PasswordRecoveryForm client:load />
      <p class="mt-4 text-center text-gray-600">
        <a href="/auth/login" class="text-primary hover:underline">Volver al inicio de sesión</a>
      </p>
    </div>
  </main>
</Layout>

<style>
  :global(body) {
    font-family: 'Montserrat', sans-serif;
  }
</style> 